<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<link rel="stylesheet" href="/css/student-room.css" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Montserrat|Poppins&display=swap" rel="stylesheet">
	<script src="/socket.io/socket.io.js"></script>
	<title>Room</title>
</head>

<body>
	<p id="designation" data-designation="<%= user["designation"] %>" data-username="<%= user["username"] %>" data-roomid="<%= roomId %>" data-email="<%= user["email"] %>"></p>

	<p id="hidden-para" style="display: none">

	</p>

	<div class="animation-container">
		<div class="box"></div>
		<div class="box"></div>
	</div>

	<div id="container">

		<div id="aside">
			<div id="header">Active Students</div>
			<ul id="rooms-data">
				<li id="default-data-item"> No Students Online</li>
			</ul>
		</div>
		<% if(user["designation"] == "Teacher") { %>
			<div id="top-data">
				<span id="name"></span>
				<span id="room"></span>
			</div>
			<% } else { %>
				<div id="top-data">
					<span id="name"></span>
					<span id="roomName"></span>
				</div>
				<% } %>

					<div id="editor-container">
						<div id="editor"></div>
					</div>

					<div class="animation-container">
						<div class="box"></div>
						<div class="box"></div>
					</div>

					<div id="i-o-container">
						<div id="input-area">
							<h4>Input</h4>
							<textarea name="" id="input" cols="30" rows="10"></textarea>
						</div>
						<div id="output-area">
							<h4>Output</h4>
							<textarea name="" id="output" cols="60" rows="10" disabled></textarea>
						</div>
						<div id="buttons-container">
							<button id="run">Run</button>
							<button id="post">Post</button>
						</div>
					</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.6/ace.js"></script>
	<script src="/js/student-room.js"></script>
	<!-- <script src="/js/clientsocket.js"></script> -->
</body>

</html>